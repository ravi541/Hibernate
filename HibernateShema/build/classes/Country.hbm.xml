<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
   <class name="com.ravi.pojo.Country" table="country">
   <id name="cid" column="cid" length="10" type="int"/>
   <property name="cname" column="cname" length="20" type="string"></property>
   <property name="ccap" column="ccap" length="20" type="string"></property>  
   </class>
   </hibernate-mapping>